{
  // UI & Rechtschreibung
  "locale": "en",
  "cSpell.language": "de,de-DE",
  "cSpell.enabledLanguageIds": ["python", "markdown", "plaintext", "jupyter"],

  // Python-Interpreter/Kernels (automatisch projektbezogene .venv)
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.typeCheckingMode": "basic",
  "python.terminal.activateEnvironment": true,
  "jupyter.kernelPicker.type": "pythonInterpreter",

  // Lint & Format
  "python.linting.ruffEnabled": true,
  "python.linting.ruffImportStrategy": "fromEnvironment",
  "python.formatting.provider": "black",
  "black-formatter.args": ["--line-length=100"],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.ruff": "explicit"
  },

  // Jupyter
  "jupyter.notebookFileRoot": "${workspaceFolder}",

  // Index/Explorer klein halten
  "files.exclude": {
    "**/__pycache__": true,
    ".venv": true
  },
  "search.exclude": {
    ".venv": true
  },

  // Editor
  "editor.rulers": [100],
  "files.trimTrailingWhitespace": true
}
